{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "..",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@shared/*": ["../shared/*"]
      }
    },
    "include": ["src/**/*", "../shared/**/*"],
    "exclude": ["node_modules"]
  }